<UserControl x:Class="DeviceTest.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DeviceTest.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="TestButtonStyle" TargetType="Button">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="BorderBrush" Value="BlueViolet"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="Gray"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                Color="Green"
                BlurRadius="20"
                ShadowDepth="4"
                Opacity="0.6"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="3">
                            <ContentPresenter
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border"
                                Property="Background"
                                Value="#8bb0ad"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border"
                                Property="Background"
                                Value="LightGray"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border"
                                Property="Opacity"
                                Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Welcome" Grid.Row="0"  FontSize="24" HorizontalAlignment="Center"/>
        <Button Content="Logout"  Command="{Binding LogoutCommand}" Width="168" Height="63" Grid.Row="2"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button 
                Command="{Binding RunTest1Command}" 
                Style="{StaticResource TestButtonStyle}"
                Grid.Row="0" Grid.Column="0">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <Image Source="/Assets/Images/gear.png"
                        Width="48"
                        Height="32"
                        HorizontalAlignment="Center"/>
                    <TextBlock Text="Config"
                        VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button Command="{Binding RunTest2Command}"
                    Style="{StaticResource TestButtonStyle}"
                    Grid.Row="0" Grid.Column="1">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <Image Source="/Assets/Images/gamepad.png"
                        Width="48"
                        Height="32"
                        HorizontalAlignment="Center"/>
                    <TextBlock Text="Gamepad"
                        VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button Command="{Binding RunTest3Command}" 
                    Style="{StaticResource TestButtonStyle}"
                    Grid.Row="0" Grid.Column="2">
                <StackPanel>
                    <Image Source="/Assets/Images/USB.png"
                           Width="48"
                           Height="32"
                           HorizontalAlignment="Center"/>
                    <TextBlock Text="HID Test" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button Command="{Binding RunTest3Command}" 
                    Style="{StaticResource TestButtonStyle}"
                    Grid.Row="0" Grid.Column="3">
                <StackPanel>
                    <Image Source="/Assets/Images/User.png"
                           Width="48"
                           Height="32"
                           HorizontalAlignment="Center"/>
                    <TextBlock Text="User" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</UserControl>
